<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swpSerieList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvSerieList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:paddingTop="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/list_item_serie"
            />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/lytSerieEmptyList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenhuma série cadastrada."
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytSerieError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Houve um erro ao carregar a lista."
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnSerieErrorRefresh"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@color/light"
            android:text="Tentar novamente"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytSerieLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="16dp"

            android:orientation="vertical">

            <ProgressBar
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:indeterminateTint="@color/light"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/loading"
                android:textColor="@color/light"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:theme="@style/MyFloatingActionButton"
        android:id="@+id/btnSerieAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="Adicionar série"
        app:borderWidth="0dp"
        android:focusable="true"
        android:clickable="true"
        android:elevation="8dp"
        app:fabCustomSize="60dp"
        app:maxImageSize="36dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@android:color/darker_gray"
        />

</RelativeLayout>